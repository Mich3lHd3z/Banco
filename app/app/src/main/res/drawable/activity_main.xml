<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_bandera"
    android:gravity="center"
    android:backgroundTint="@color/white"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnLuz"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_rounded_green"
        android:onClick="toggleLuz"
        android:text="Luz"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnPuertas"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Puertas"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:background="@drawable/btn_rounded_green"
        android:layout_marginTop="16dp"
        android:onClick="togglePuertas" />

    <Button
        android:id="@+id/btnUltra"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Ultra"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:background="@drawable/btn_rounded_green"
        android:layout_marginTop="16dp"
        android:onClick="toggleUltra" />

</LinearLayout>
